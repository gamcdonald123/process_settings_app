<% if notice %>
    <div id="notice" class="bg-blue-100 border-t-4 border-blue-500 rounded-b text-blue-900 px-4 py-3 shadow-md m-1 transition-opacity duration-500 absolute bottom-0 left-0 w-96" role="alert">
        <div class="flex">
            <div class="py-1">
                <svg class="fill-current h-6 w-6 text-blue-500 mr-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm12.73-1.41A8 8 0 1 0 4.34 4.34a8 8 0 0 0 11.32 11.32zM9 11V9h2v6H9v-4zm0-6h2v2H9V5z"/></svg>
            </div>
            <div>
                <%= notice %>
            </div>
        </div>
    </div>
<% end %>
<% if alert %>
    <div id="alert" class="bg-red-500 border-t-4 border-red-100 rounded-b text-white px-4 py-3 shadow-md m-1 transition-opacity duration-500 absolute bottom-0 left-0 w-96" role="alert">
        <div class="flex">
            <div class="py-1">
                <svg class="fill-current h-6 w-6 text-red-200 mr-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm12.73-1.41A8 8 0 1 0 4.34 4.34a8 8 0 0 0 11.32 11.32zM9 11V9h2v6H9v-4zm0-6h2v2H9V5z"/></svg>
            </div>
            <div>
                <%= alert %>
            </div>
        </div>
    </div>
<% end %>
<% if flash[:success] %>
    <div id="success" class="bg-green-100 border-t-4 border-green-500 rounded-b text-green-900 px-4 py-3 shadow-md m-1 transition-opacity duration-500 absolute bottom-0 left-0 w-96" role="alert">
        <div class="flex">
            <div class="py-1">
                <svg class="fill-current h-6 w-6 text-green-500 mr-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm12.73-1.41A8 8 0 1 0 4.34 4.34a8 8 0 0 0 11.32 11.32zM9 11V9h2v6H9v-4zm0-6h2v2H9V5z"/></svg>
            </div>
            <div>
                <%= flash[:success] %>
            </div>
        </div>
    </div>
<% end %>

<script>
    setTimeout(function(){
        var notice = document.getElementById('notice');
        var alert = document.getElementById('alert');
        var success = document.getElementById('success');
        if (notice) { notice.style.opacity = '0'; }
        if (alert) { alert.style.opacity = '0'; }
        if (success) { success.style.opacity = '0'; }
    }, 5000);
</script>