<!-- _navbar.html.erb -->
<nav class="border-b-2 py-4 mx-auto px-4 max-w-7xl" data-controller="navbar">
    <div class="flex items-center justify-between"> <!-- Centered horizontally -->
        <!-- Left Section for Burger and Logo -->
        <div class="flex items-center">
            <!-- Burger icon with Stimulus action to toggle the menu -->
            <div id="burger" class="flex flex-col space-y-2 cursor-pointer mr-12" data-action="click->navbar#toggleMenu">
                <div class="w-8 h-0.5 bg-gray-600"></div>
                <div class="w-8 h-0.5 bg-gray-600"></div>
                <div class="w-8 h-0.5 bg-gray-600"></div>
            </div>
            <!-- Logo -->
            <%= image_tag("Goodfish-MAKING-Logo-3-Transparent-BK-Ground.png", alt: "goodfish-logo", class: "h-12") %>
        </div>

        <!-- Center Section for Navigation Links -->
        <div class="hidden md:flex justify-center flex-grow" id="menu" data-navbar-target="menu">
            <ul class="list-none flex justify-center">
                <%= link_to root_path, class: "mr-4 ml-4 bg-sky-100 p-4 w-32 text-center rounded-md border border-transparent hover:border-blue-500 transition ease-in-out duration-200" do %>
                    <li>Home</li>
                <% end %>
                <%= link_to sites_path, class: "mr-4 ml-4 bg-sky-100 p-4 w-32 text-center rounded-md border border-transparent hover:border-blue-500 transition ease-in-out duration-200" do %>
                    <li>Sites</li>
                <% end %>
                <%= link_to machines_path, class: "mr-4 ml-4 bg-sky-100 p-4 w-32 text-center rounded-md border border-transparent hover:border-blue-500 transition ease-in-out duration-200" do %>
                    <li>Machines</li>
                <% end %>
                <%= link_to tools_path, class: "mr-4 ml-4 bg-sky-100 p-4 w-32 text-center rounded-md border border-transparent hover:border-blue-500 transition ease-in-out duration-200" do %>
                    <li>Tools</li>
                <% end %>
                <%= link_to settings_path, class: "mr-4 ml-4 bg-sky-100 p-4 w-32 text-center rounded-md border border-transparent hover:border-blue-500 transition ease-in-out duration-200" do %>
                    <li>Parameters</li>
                <% end %>
                <%= link_to feedbacks_new_path, class: "mr-4 ml-4 bg-sky-100 p-4 w-32 text-center rounded-md border border-transparent hover:border-blue-500 transition ease-in-out duration-200" do %>
                    <li>Feedback</li>
                <% end %>
            </ul>
        </div>

        <!-- Right Section for User Info and Sign Out -->
        <% if user_signed_in? %>
            <div class="flex flex-col items-center">
                <p class="text-center mb-1"><%= current_user.first_name %> <%= current_user.last_name %></p>
                <!-- button_to gets round the get request issue on sign-out -->
                <%= button_to "Sign out", destroy_user_session_path(@current_user), method: :delete, class: "text-right" %>
            </div>
        <% else %>
            <div class="text-center">
                <%= link_to "Sign in", new_user_session_path, class: "text-center" %>
            </div>
        <% end %>
    </div>
</nav>
