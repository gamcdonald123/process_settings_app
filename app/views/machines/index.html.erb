<div>
    <div class="bg-sky-100 text-center rounded mb-4">
        <h1 class="text-3xl p-4">Machines</h1>
    </div>
    <div class="overflow-x-auto bg-white rounded-lg shadow overflow-y-auto relative mb-4">
        <table class="border-collapse table-auto w-full whitespace-no-wrap bg-white table-striped relative">
            <thead>
                <tr class="text-left">
                    <th class="bg-blue-100 sticky top-0 p-2 border-b border-gray-200">Machine</th>
                    <th class="bg-blue-100 sticky top-0 p-2 border-b border-gray-200">Tonnage â¬†</th>
                    <th class="bg-blue-100 sticky top-0 p-2 border-b border-gray-200">Manufacturer</th>
                    <th class="bg-blue-100 sticky top-0 p-2 border-b border-gray-200">Site</th>
                </tr>
            </thead>
            <tbody>
                <% @machines.each do |machine| %>
                <tr class="hover:bg-gray-100 cursor-pointer" data-controller="machines-table" data-action="click->machines-table#goToMachine" data-machines-table-machine-url-value="<%= machine_path(machine) %>">
                    <td class="p-2 border-b border-gray-200">
                        <%= machine.machine_name %>
                    </td>
                    <td class="p-2 border-b border-gray-200">
                        <%= machine.tonnage %>
                    </td>
                    <td class="p-2 border-b border-gray-200">
                        <%= machine.manufacturer %>
                    </td>
                    <td class="p-2 border-b border-gray-200">
                        <%= machine.site.site_name %>
                    </td>
                </tr>
            <% end %>
            </tbody>
        </table>
    </div>
    <div class="bg-blue-500 text-white w-36 text-center py-1 rounded">
        <%= link_to 'Add a new machine', new_machine_path %>
    </div>
</div>
