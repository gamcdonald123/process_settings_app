<div>
    <div class="bg-sky-100 text-center rounded mb-4">
        <h1 class="text-3xl p-4">Machines</h1>
    </div>
    <div class="overflow-x-auto bg-white rounded-lg shadow overflow-y-auto relative mb-4">
        <table class="border-collapse table-auto w-full whitespace-no-wrap bg-white table-striped relative">
            <thead>
                <tr class="text-left">
                    <th class="bg-blue-100 sticky top-0 p-2 border-b border-gray-200">Machine</th>
                    <th class="bg-blue-100 sticky top-0 p-2 border-b border-gray-200">Tonnage</th>
                    <th class="bg-blue-100 sticky top-0 p-2 border-b border-gray-200">No. of settings</th>
                    <th class="bg-blue-100 sticky top-0 p-2 border-b border-gray-200">Site</th>
                </tr>
            </thead>
            <tbody>
                <% @machines.each do |machine| %>
                    <tr class="hover:bg-gray-100">
                        <td class="p-2 border-b border-gray-200 hover:underline"><%= link_to machine.machine_name, machine_path(machine) %></td>
                        <td class="p-2 border-b border-gray-200"><%= machine.tonnage %></td>
                        <td class="p-2 border-b border-gray-200"><%= machine.settings.count %></td>
                        <td class="p-2 border-b border-gray-200 hover:underline"><%= link_to machine.site.site_name, site_path(machine.site) %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <div class="bg-blue-500 text-white w-36 text-center py-1 rounded">
        <%= link_to 'Add a new machine', new_machine_path %>
    </div>
</div>
