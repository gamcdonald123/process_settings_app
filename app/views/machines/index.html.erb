<div class="bg-sky-100 text-center rounded">
    <h1 class="text-3xl p-4">Machines</h1>
</div>
<div class="grid grid-cols-3 gap-4 mt-4">
    <% @machines.each do |machine| %>
        <%= link_to machine_path(machine), class: "card border border-gray-300 rounded-lg p-4 flex items-center block" do %>
            <div>
                <h2 class="text-lg mb-2"><%= machine.machine_name %></h2>
            </div>
        <% end %>
    <% end %>
</div>

<div class="w-320 mt-24">
    <table class="table-auto">
        <thead>
            <tr>
                <th class="pr-32">Machine</th>
                <th class="pr-24">Tonnage</th>
                <th class="pr-24">Manufacturer</th>
                <th class="pr-24">Site</th>
            </tr>
        </thead>
        <tbody>
            <% @machines.each do |machine| %>
                <tr class="hover:underline cursor-pointer" onclick="window.location='<%= machine_path(machine) %>'">                    <td><%= machine.machine_name %></td>
                    <td><%= machine.tonnage %></td>
                    <td><%= machine.manufacturer %></td>
                    <td><%= Site.find(machine.site_id).site_name %></td>
                </tr>
            <% end %>
        </tbody>    
    </table>
</div>