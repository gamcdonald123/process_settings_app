<h1 class="text-2xl">Machines</h1>

<div class="grid grid-cols-3 gap-4 mt-4">
    <% @machines.each do |machine| %>
        <%= link_to machine_path(machine), class: "card border border-gray-300 rounded-lg p-4 flex items-center block" do %>
            <div>
                <h2 class="text-lg mb-2"><%= machine.machine_name %></h2>
            </div>
        <% end %>
    <% end %>
</div>