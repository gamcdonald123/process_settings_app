<h1 class="mb-4 text-2xl font-bold"><%= @machine.machine_name %></h1>

<div class="mb-4">
    <%= link_to "Back", machines_path, class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mb-4" %>
</div>

<div class="container w-full">
  <div class="flex">
    <div class="bg-white rounded-lg shadow p-6 mb-4">
      <p>Type: <%= @machine.machine_type %></p>
      <p>Site: <%= @machine.site.site_name %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-4 mb-4 ml-4 flex">
      <div>
        <p>⚙️</p>
      </div>
      <div class="ml-4">
        <p><%= @machine.tonnage %>T</p>
      </div>
    </div>
  </div>

</div>

<div class="overflow-x-auto bg-white rounded-lg shadow overflow-y-auto relative mb-4">
  <table class="border-collapse table-auto w-full whitespace-no-wrap bg-white table-striped relative">
    <thead>
      <tr class="text-left">
        <th class="bg-blue-100 sticky top-0 p-2 border-b border-gray-200">Tool</th>
        <th class="bg-blue-100 sticky top-0 p-2 border-b border-gray-200">Machine Name</th>
        <th class="bg-blue-100 sticky top-0 p-2 border-b border-gray-200">Site Name</th>
        <th class="bg-blue-100 sticky top-0 p-2 border-b border-gray-200">Machine Type</th>
      </tr>
    </thead>
    <tbody>
      <% @settings.each do |setting| %>
        <tr class="cursor-pointer hover:bg-gray-100">
          <td class="p-2 border-b border-gray-200 hover:underline"><%= setting.tool.name %></td>
          <td class="p-2 border-b border-gray-200"><%= setting.machine.machine_name %></td>
          <td class="p-2 border-b border-gray-200"><%= setting.machine.site.site_name %></td>
          <td class="p-2 border-b border-gray-200"><%= setting.machine.machine_type %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
