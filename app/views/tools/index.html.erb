<div class="bg-sky-100 text-center rounded mb-4">
    <h1 class="text-3xl p-4">Tools</h1>
</div>

<div class="overflow-x-auto bg-white rounded-lg shadow overflow-y-auto relative mb-4">

    <table class="border-collapse table-auto w-full whitespace-no-wrap bg-white table-striped relative">
        <thead>
            <tr class="text-left">
                <th class="bg-blue-100 sticky top-0 p-2 border-b border-gray-200">Tool</th>
                <th class="bg-blue-100 sticky top-0 p-2 border-b border-gray-200">Type</th>
            </tr>
        </thead>
        <tbody>
            <% @tools.each do |tool| %>
                <tr class="hover:bg-gray-100 cursor-pointer" data-controller="tool-table-row" data-action="click->tool-table-row#goToTool" data-tool-table-row-tool-url-value="<%= tool_path(tool) %>">
                    <td class="p-2 border-b border-gray-200">
                        <%= tool.name %>
                    </td>
                    <td class="p-2 border-b border-gray-200">
                        <%= tool.tool_type %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>