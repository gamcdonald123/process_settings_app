<h1 class="text-lg">Tools</h1>

<div class="grid grid-cols-3 gap-4 mt-4">
    <% @tools.each do |tool| %>
        <%= link_to tool_path(tool), class: "card border border-gray-300 rounded-lg p-4 flex items-center block" do %>
            <div>
                <h2 class="text-lg mb-2"><%= tool.tool_name %></h2>
            </div>
        <% end %>
    <% end %>
</div>