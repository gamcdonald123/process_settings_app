<div class="bg-sky-100 text-center rounded">
    <h1 class="text-3xl p-4">Sites</h1>
</div>

<div class="grid grid-cols-3 gap-4 mt-4">
    <% @sites.each do |site| %>
        <%= link_to site_path(site), class: "card border border-gray-300 rounded-lg p-4 flex items-center block" do %>
            <div>
                <h2 class="text-2xl mb-2"><%= site.site_name %></h2>
            </div>
        <% end %>
    <% end %>
</div>