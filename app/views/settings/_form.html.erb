<div class="flex justify-center text-left">
    <%= form_with(model: @setting, local: true) do |form| %>
        <h2 class="block text-gray-700 text-2xl font-bold mb-4 mt-4">Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 max-w-2xl mx-auto mb-4" data-controller="dropdown">
            <div class="mb-4">
                <%= form.label :technician_id, "Technician", class: "block text-gray-700 text-sm font-bold mb-2" %>
                <%= form.select :technician_id, options_for_select(Technician.all.map { |s| ["#{s.first_name} #{s.last_name}", s.id] }), {}, { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" } %>
            </div>
            <div class="mb-4">
                <%= form.label :site_id, "Site", class: "block text-gray-700 text-sm font-bold mb-2" %>
                <%= form.select :site_id, options_for_select(Site.all.map { |s| [s.site_name, s.id] }), {}, {data: { action: "change->dropdown#updateMachines", dropdown_target: "site" }, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"} %>
            </div>
            <div class="mb-4">
                <%= form.label :machine_id, "Machine", class: "block text-gray-700 text-sm font-bold mb-2" %>
                <%= form.select :machine_id, [], {}, {data: { dropdown_target: "machine" }, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"} %>
            </div>
            <div class="mb-4">
                <%= form.label :tool_id, "Tool", class: "block text-gray-700 text-sm font-bold mb-2" %>
                <%= form.select :tool_id, options_from_collection_for_select(Tool.all, 'id', 'name'), { prompt: 'Select a tool' }, { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" } %>
            </div>
            <div class="mb-4">
                <%= form.label :cycle_time, "Cycle Time", class: "block text-gray-700 text-sm font-bold mb-2" %>
                <%= form.number_field :cycle_time, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
            </div>
            <div class="mb-4">
                <%= form.label :drying_time, "Drying Time (hours)", class: "block text-gray-700 text-sm font-bold mb-2" %>
                <%= form.number_field :drying_time, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
            </div>
            <div class="mb-4">
                <%= form.label :shot_weight, "Shot Weight", class: "block text-gray-700 text-sm font-bold mb-2" %>
                <%= form.number_field :shot_weight, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
            </div>
            <div class="mb-4">
                <%= form.label :sprue_weight, "Sprue Weight", class: "block text-gray-700 text-sm font-bold mb-2" %>
                <%= form.number_field :sprue_weight, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
            </div>
        </div>
        <%# Temperatures %>
        <h2 class="block text-gray-700 text-2xl font-bold mb-4">Temperatures</h2>
        <div class="section border border-black rounded shadow-md p-4 mb-4">
            <h1 class="font-bold text-gray-700 mb-4">Hot Runner</h1>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 max-w-2xl mx-auto">
                <div>
                    <%= form.label "nozzle_temp", "Nozzle", class: "text-sm mb-4 font-bold text-gray-700" %>
                    <%= form.number_field "nozzle_temp", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                </div>
                <%# Hot runner temperates. Change number to change fields %>
                <% 24.times do |i| %>
                    <div class="w-full md:w-1/2 lg:w-1/4">
                        <%= form.label "hr_zone#{i+1}_temp", "Zone #{i+1}", class: "text-sm mb-4 font-bold text-gray-700" %>
                        <%= form.number_field "hr_zone#{i+1}_temp", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="section border border-black rounded shadow-md p-4 mb-4">
            <h1 class="font-bold text-gray-700">Barrel</h1>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 max-w-2xl mx-auto">
                <%# Hot runner temperates. Change number to change fields %>
                <% 12.times do |i| %>
                    <div class="w-full md:w-1/2 lg:w-1/4">
                        <%= form.label "zone#{i+1}_temp", "Zone #{i+1}", class: "text-sm mb-4 font-bold text-gray-700" %>
                        <%= form.number_field "zone#{i+1}_temp", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                    </div>
                <% end %>
            </div>
        </div>
        
        <%# Injection %>
        <h2 class="block text-gray-700 text-2xl font-bold mb-4 mt-4">Mould</h2>
        <div class="section border border-black rounded shadow-md p-4 mb-4">
            <%# Mould opening %>
            <h2 class="block text-gray-700 text-xl font-bold mb-4">Mould Heating</h2>
            <div class="flex justify-center mb-6">
                    <div class="flex flex-col border rounded p-4 mr-4 w-full">
                        <%= form.label "heating_type", "Heater Type", class: "text-sm mb-4 font-bold text-gray-700" %>
                        <%= form.select :tool_heater_type, options_for_select(["Oil", "Water"]), {}, { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" } %>
                    </div>
                    <div class="flex flex-col border rounded p-4 mr-4 w-full">
                        <%= form.label "mh_temp", "Moving Half Temp", class: "text-sm mb-4 text-gray-700 font-bold" %>
                        <%= form.number_field "mh_temp", class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                    </div>
                    <div class="flex flex-col border rounded p-4 w-full">
                        <%= form.label "fh_temp", "Fixed Half Temp", class: "text-sm mb-4 text-gray-700 font-bold" %>
                        <%= form.number_field "fh_temp", class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                    </div>
            </div>
        </div>
        <div class="section border border-black rounded shadow-md p-4 mb-4">
            <%# Mould opening %>
            <h2 class="block text-gray-700 text-xl font-bold mb-4">Mould Opening</h2>
            <div class="flex justify-center mb-6">
                    <div class="flex flex-col border rounded p-4 mr-12">
                        <%= form.label "opening_stroke", "Opening Stroke", class: "text-sm mb-4 font-bold text-gray-700" %>
                        <%= form.number_field "opening_stroke", class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                    </div>
                    <div class="flex flex-col border rounded p-4">
                        <%= form.label "ejection_cycles", "Ejection Cycles", class: "text-sm mb-4 font-bold text-gray-700" %>
                        <%= form.number_field "ejection_cycles", class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                    </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 max-w-2xl mx-auto">
                <% 3.times do |i| %>
                    <div class="flex flex-col border rounded p-4">
                        <div>
                            <%= form.label "Speed #{i+1}", class: "text-sm mb-4 font-bold text-gray-700" %>
                            <%= form.number_field "opening_speed_#{i+1}", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-2" %>
                        </div>
                        <div>
                            <%= form.label "Position #{i+1}", class: "text-sm mb-4 font-bold text-gray-700" %>
                            <%= form.number_field "opening_position_#{i+1}", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
        <%# Mould closing %>
        <div class="section border border-black rounded shadow-md p-4 mb-4">
            <h2 class="block text-gray-700 text-xl font-bold mb-4">Mould Closing</h2>
            <div class="flex justify-center mb-6">
                <div class="flex flex-col border rounded p-4 mr-12">
                    <%= form.label "closing_pressure", "Closing Pressure", class: "text-sm mb-4 font-bold text-gray-700" %>
                    <%= form.number_field "closing_pressure", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                </div>
                <div class="flex flex-col border rounded p-4">
                    <%= form.label "locking_tonnage", "Locking Tonnage", class: "text-sm mb-4 font-bold text-gray-700" %>
                    <%= form.number_field "locking_tonnage", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 max-w-2xl mx-auto">
                <% 3.times do |i| %>
                    <div class="flex flex-col border rounded p-4">
                        <%= form.label "Speed #{i+1}", class: "text-sm mb-4 font-bold text-gray-700" %>
                        <%= form.number_field "closing_speed_#{i+1}", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-2" %>
                        <%= form.label "Position #{i+1}", class: "text-sm mb-4 font-bold text-gray-700" %>
                        <%= form.number_field "closing_position_#{i+1}", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                    </div>
                <% end %>
            </div>
        </div>
        <%# Ejection %>
        <div class="section border border-black rounded shadow-md p-4 mb-4">
            <h2 class="block text-gray-700 text-xl font-bold mb-4">Ejection</h2>
            <h2 class="text-gray-700 font-semibold mb-4 text-lg">Forward</h2>
            <div class="grid grid-cols-2 gap-4 max-w-2xl items-center">
                <% 2.times do |i| %>
                    <div class="flex flex-wrap justify-center space-x-4 space-y-4 border rounded p-4">
                        <div class="px-4">
                            <%= form.label "Speed #{i+1}", class: "text-sm mb-4 font-bold text-gray-700" %>
                            <div class="flex w-1/2">
                                <%= form.number_field "ejection_forward_speed_#{i+1}", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-2" %>
                                <span class="ml-4 py-2">mm/s</span>
                            </div>
                        </div>
                        <div class="px-4">
                            <%= form.label "Pressure #{i+1}", class: "text-sm mb-4 font-bold text-gray-700" %>
                            <div class="flex w-1/2">
                                <%= form.number_field "ejection_forward_pressure_#{i+1}", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                                <span class="ml-4 py-2">°C</span>
                            </div>
                        </div>
                        <div class="px-4">
                            <%= form.label "Position #{i+1}", class: "text-sm mb-4 font-bold text-gray-700" %>
                            <div class="flex w-1/2">
                                <%= form.number_field "ejection_forward_position_#{i+1}", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                                <span class="ml-4 py-2">mm</span>
                            </div>
                        </div>
                    </div>
                <% end %>
                <div class="flex flex-col items-center">
                    <%= form.label "Delay", class: "text-sm mb-4 font-bold text-gray-700" %>
                    <div class="flex justify-center items-center">
                        <%= form.number_field "ejection_forward_delay", class: "shadow appearance-none border rounded w-1/2 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                        <span class="ml-4 text-sm">s</span>
                    </div>
                </div>
            </div>
            <hr class="my-4 mt-4">
            <h2 class="text-gray-700 font-semibold text-lg mb-4 mt-4">Back</h2>            
            <div class="grid grid-cols-2 gap-4 max-w-2xl">
                <% 2.times do |i| %>
                    <div class="flex flex-wrap justify-center space-x-4 space-y-4 border rounded p-4">
                        <div class="px-4">
                            <%= form.label "Speed #{i+1}", class: "text-sm mb-4 font-bold text-gray-700" %>
                            <div class="flex w-1/2">
                                <%= form.number_field "ejection_forward_speed_#{i+1}", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-2" %>
                                <span class="ml-4 py-2">mm/s</span>
                            </div>
                        </div>
                        <div class="px-4">
                            <%= form.label "Pressure #{i+1}", class: "text-sm mb-4 font-bold text-gray-700" %>
                            <div class="flex w-1/2">
                                <%= form.number_field "ejection_forward_pressure_#{i+1}", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                                <span class="ml-4 py-2">°C</span>
                            </div>
                        </div>
                        <div class="px-4">
                            <%= form.label "Position #{i+1}", class: "text-sm mb-4 font-bold text-gray-700" %>
                            <div class="flex w-1/2">
                                <%= form.number_field "ejection_forward_position_#{i+1}", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                                <span class="ml-4 py-2">mm</span>
                            </div>
                        </div>
                    </div>
                <% end %>
                <div class="flex flex-col items-center">
                    <%= form.label "Delay", class: "text-sm mb-4 font-bold text-gray-700" %>
                    <div class="flex justify-center items-center">
                        <%= form.number_field "ejection_forward_delay", class: "shadow appearance-none border rounded w-1/2 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                        <span class="ml-4 text-sm">s</span>
                    </div>
                </div>
            </div>
        </div>
        <%# Injection profile %>
        <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-700 mb-4">Injection Profile</h2>
            <div class="section border border-black rounded shadow-md p-4 mb-4">
                <table class="w-full text-sm text-left text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th class="pr-8"></th>
                            <th class="px-6">Speed (mm/s)</th>
                            <th class="px-6">Position (mm)</th>
                            <th class="px-6">Pressure (bar)</th>
                        </tr>
                        <tr>
                            <!-- Number headers from 1 to 6 -->
                            <th class="px-6"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% 6.times do |i| %>
                            <tr class="bg-white">
                                <td class="pr-8 py-4 font-medium text-gray-900 "><%= "#{i + 1}" %></td>
                                <td class="px-8 py-4">
                                    <%= form.number_field "injection_speed_#{i+1}", class: "shadow appearance-none border rounded w-8/12 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-2", aria_describedby: "injection_speed_#{i+1}_help" %>
                                </td>
                                <td class="px-8 py-4">
                                    <%= form.number_field "injection_position_#{i+1}", class: "shadow appearance-none border rounded w-8/12 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-2", aria_describedby: "injection_position_#{i+1}_help" %>
                                </td>
                                <td class="px-8 py-4">
                                    <%= form.number_field "injection_pressure_#{i+1}", class: "shadow appearance-none border rounded w-8/12 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-2", aria_describedby: "injection_pressure_#{i+1}_help" %>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>                
                </table>
            </div>
        </div>
        <%# Holding pressure %>
        <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-700 mb-4">Holding Pressure</h2>
            <div class="section border border-black rounded shadow-md p-4 mb-4">
                <table class="w-full text-sm text-left text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th class="pr-8"></th>
                            <th class="px-6">Pressure (bar)</th>
                            <th class="px-6">Time (s)</th>
                            <th class="px-6">Speed (mm/s)</th>
                        </tr>
                        <tr>
                            <!-- Number headers from 1 to 6 -->
                            <th class="px-6"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% 6.times do |i| %>
                            <tr class="bg-white">
                                <td class="pr-8 py-4 font-medium text-gray-900 "><%= "#{i + 1}" %></td>
                                <td class="px-8 py-4">
                                    <%= form.number_field "holding_pressure_#{i+1}", class: "shadow appearance-none border rounded w-8/12 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-2", aria_describedby: "injection_speed_#{i+1}_help" %>
                                </td>
                                <td class="px-8 py-4">
                                    <%= form.number_field "holding_pressure_time_#{i+1}", class: "shadow appearance-none border rounded w-8/12 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-2", aria_describedby: "injection_position_#{i+1}_help" %>
                                </td>
                                <td class="px-8 py-4">
                                    <%= form.number_field "holding_pressure_speed_#{i+1}", class: "shadow appearance-none border rounded w-8/12 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-2", aria_describedby: "injection_pressure_#{i+1}_help" %>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>                
                </table>
            </div>
        </div>
        <div class="section border border-black rounded shadow-md p-4 mb-4">
            <%# Screw %>
            <h2 class="block text-gray-700 text-xl font-bold mb-4">Screw</h2>
            <div class="grid grid-cols-3 gap-4">
                <div class="flex flex-col border rounded p-4">
                    <%= form.label "screw_speed", "Screw Speed", class: "text-sm mb-4 font-bold text-gray-700" %>
                    <%= form.number_field "screw_speed", class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                </div>
                <div class="flex flex-col border rounded p-4">
                    <%= form.label "ejector_stroke", "Ejector Stroke", class: "text-sm mb-4 font-bold text-gray-700" %>
                    <%= form.number_field "ejector_stroke", class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                </div>
                <div class="flex flex-col border rounded p-4">
                    <%= form.label "back_pressure", "Back Pressure", class: "text-sm mb-4 font-bold text-gray-700" %>
                    <%= form.number_field "back_pressure", class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                </div>
                <div class="flex flex-col border rounded p-4">
                    <%= form.label "cushion_position", "Cushion Position", class: "text-sm mb-4 font-bold text-gray-700" %>
                    <%= form.number_field "cushion_position", class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                </div>
                <div class="flex flex-col border rounded p-4">
                    <%= form.label "cooling_time", "Cooling Time", class: "text-sm mb-4 font-bold text-gray-700" %>
                    <%= form.number_field "cooling_time", class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                </div>
                <div class="flex flex-col border rounded p-4">
                    <%= form.label "switchover_position", "Switchover Position", class: "text-sm mb-4 font-bold text-gray-700" %>
                    <%= form.number_field "switchover_position", class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                </div>
            </div>
        </div>
        <div class="section border border-black rounded shadow-md p-4 mb-4">
            <div class="grid grid-cols-1 gap-4 mt-4">
                <div class="mb-4">
                    <%= form.label :technicians_rating, "Rating (1 - 5)", class: "block text-gray-700 text-sm font-bold mb-2" %>
                    <%= form.number_field :technicians_rating, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                </div>
                <div class="mb-4">
                    <%= form.label :technicians_comments, "Comments", class: "block text-gray-700 text-sm font-bold mb-2" %>
                    <%= form.text_area :technicians_comments, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                </div>
            </div>
        </div>
        <div class="flex items-center justify-between">
            <%= form.submit "Save", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
    <% end %>
</div>