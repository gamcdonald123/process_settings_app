<div class="w-full p-4">
    <div>
        <h1 class="text-2xl font-bold text-gray-700 mb-4">Temperatures</h1>
        <div class="section border border-black rounded shadow-md p-4 mb-4">
            <h1 class="font-bold text-gray-700 mb-4">Hot Runner</h1>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 max-w-2xl mx-auto">
                <% 24.times do |i| %>
                    <% if @setting.send("hr_zone#{i+1}_temp").present? %>
                        <div class="w-full md:w-1/2 lg:w-1/4 border rounded p-4">
                            <p class="text-gray-700 mb-2"><%= "Zone #{i+1}" %></p>
                            <p class="text-gray-700"><%= @setting.send("hr_zone#{i+1}_temp") %></p>
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>